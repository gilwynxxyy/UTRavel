<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reg1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.johnabedeza.utravel.reg1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/utlogo"
                android:id="@+id/imageView2"
                android:layout_weight="0.22"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="UTravel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:layout_weight="0.22"
                android:fontFamily="cursive"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textColor="@color/abc_input_method_navigation_guard" />

            <TextView
                android:text="Your personal travel guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:layout_weight="0.22"
                android:textAlignment="center"
                android:textColor="@color/abc_input_method_navigation_guard" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="3dp" />

            <TextView
                android:text="Step 1/3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="0.22"
                android:textAlignment="textEnd" />

            <TextView
                android:text="Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:layout_weight="0.22"
                android:textSize="18sp"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/tbname"
                android:layout_weight="0.22" />

            <TextView
                android:text="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="0.22"
                android:textSize="18sp"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/tbemail"
                android:layout_weight="0.22" />

            <TextView
                android:text="Birthdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_weight="0.22"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textColor="@color/abc_input_method_navigation_guard" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/tbbday"
                android:layout_weight="0.22" />

            <Button
                android:text="Step 2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnreg2"
                android:layout_weight="0.22"
                android:background="@color/colorPrimary" />

            <Button
                android:text="Go back to Log In"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnback1"
                android:layout_weight="0.22" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
