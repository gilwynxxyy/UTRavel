<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reg3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.johnabedeza.utravel.reg3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" > <ImageView
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:src="@drawable/utlogo"
            android:id="@+id/imageView2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

            <TextView
                android:text="UTravel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:layout_weight="0.22"
                android:fontFamily="cursive"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textColor="@color/abc_input_method_navigation_guard" />

            <TextView
                android:text="Your personal travel guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:layout_weight="0.22"
                android:textAlignment="center"
                android:textColor="@color/abc_input_method_navigation_guard" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="3dp" />

            <TextView
                android:text="Step 3/3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="0.22"
                android:textAlignment="textEnd"
                android:textColor="@color/abc_input_method_navigation_guard" />

            <TextView
                android:text="Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/abc_input_method_navigation_guard" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText" />

            <TextView
                android:text="Re-enter Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textSize="18sp"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/tbpass2" />

            <Button
                android:text="Finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnreg3"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimary" />

            <Button
                android:text="step 2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnback3"
                android:layout_marginTop="20dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
